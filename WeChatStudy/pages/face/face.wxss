.container{
  width: 100%;
  height: 100%;
}
.page-body {
  width: 100%;
  height: 100%;
  background: #ffffff;
}

.main{
  width: 80%;
  height: 90%;
  display: table-cell;
  text-align: center;
  vertical-align: middle;
  /* border: 5px solid red;  显示边框 */
  position: relative;
  top: -40px;
}

.camera-box {
  width: 750rpx;
  height: 505rpx;
  margin-top: 100rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera {
  width: 480rpx;
  height: 480rpx;
  z-index: 1;
  border-radius: 50%;
}

.img-view {
  width: 750rpx;
  height: 505rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
}
.mask-img {
  width: 750rpx;
  height: 505rpx;
}
